<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ExpandableLayout">
        <attr name="titleHeight" format="dimension|reference" />
        <attr name="titleBgColor" format="color|reference" />
        <attr name="titleName" format="string|reference" />
        <attr name="titleNameColor" format="color|reference" />
        <attr name="titleNameSize" format="dimension|reference" />
        <attr name="titleIcon" format="reference|reference" />

        <attr name="animDuration" format="integer" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="isCollapse" format="boolean" />

        <attr name="mtextRight" format="string|reference" localization="suggested" />
        <attr name="mtextRightColor" format="color|reference" />
        <attr name="mtextRightSize" format="dimension|reference" />
        <attr name="mdisplayArrow" format="boolean" />
        <attr name="mdisplaySwitch" format="boolean" />
        <attr name="mdividerVisibility" format="boolean" />
    </declare-styleable>
</resources>